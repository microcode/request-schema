{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "lib": ["es2017", "dom"],
    "outDir": "./dist",
    "target": "es2017",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "dist",
    "src/**/*.spec.ts"
  ]
}